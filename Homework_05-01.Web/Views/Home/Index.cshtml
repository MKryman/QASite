@using Homework_05_01.Data;
@model List<Question>;

<div b-k8y6yzo0ym class="container">
    <main b-k8y6yzo0ym role="main" class="pb-3">

        <div class="row">
            <div class="col-md-8 offset-md-2" style="margin-top:100px">
                @foreach (Question q in Model)
                {
                    <div class="card card-body bg-light mb-4">
                        <h4>
                            <a href="/home/viewquestion?id=@q.Id">
                                @q.Title
                            </a>
                        </h4>
                        <div>
                            <span>Tags:</span>
                            @foreach (QuestionTag qt in q.QuestionsTags)
                            {
                                <span class="badge bg-primary">@qt.Tag.Name</span>
                            }
                        </div>
                        <div style="margin-top: 10px;">
                            @q.Text
                        </div>
                        <br/>
                        <span>@q.Answers.Count answer(s)</span>
                    </div>
                }
            </div>
        </div>


    </main>
</div>